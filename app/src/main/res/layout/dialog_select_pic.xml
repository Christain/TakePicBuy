<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:background="@color/bg_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvAlbum"
            android:gravity="center"
            android:layout_width="@dimen/crop_image_dialog_width"
            android:layout_height="@dimen/search_result_dialog_high"
            android:background="@drawable/shape_select_type_top"
            android:text="相册选择"
            android:textColor="#FF919191"
            android:textSize="@dimen/search_result_dialog_text_size"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_high"
            android:background="@color/set_line_color"/>

        <TextView
            android:id="@+id/tvCamera"
            android:gravity="center"
            android:layout_width="@dimen/crop_image_dialog_width"
            android:layout_height="@dimen/search_result_dialog_high"
            android:background="@drawable/shape_select_type_mid"
            android:text="相机拍照"
            android:textColor="#FF919191"
            android:textSize="@dimen/search_result_dialog_text_size"/>
    </LinearLayout>
</LinearLayout>