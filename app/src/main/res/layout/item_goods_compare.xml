<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llItemAll"
        android:background="@drawable/shape_goods_compare_item_click_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:paddingLeft="@dimen/goods_compare_padding_left_right"
            android:paddingRight="@dimen/goods_compare_padding_left_right"
            android:layout_width="match_parent"
            android:layout_height="@dimen/goods_cpmpare_item_minhigh"
            android:orientation="horizontal">

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/goods_compare_price_text_size"
                android:maxLength="12"
                android:text="￥900"
                android:textColor="@color/search_result_price_color" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="@dimen/goods_compare_pic_size"
                android:layout_height="@dimen/goods_compare_pic_size"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/ivPic" />

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/tvTitle"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/tvPrice"
                android:layout_toLeftOf="@id/ivPic"
                android:singleLine="true"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="爆款T恤,赶紧入手吧~~" />

            <LinearLayout
                android:layout_marginTop="@dimen/goods_compare_between_size"
                android:layout_below="@id/tvPrice"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivType"
                    android:layout_width="@dimen/goods_compare_type_size"
                    android:layout_height="@dimen/goods_compare_type_size"
                    android:src="@mipmap/icon_type_taobao" />

                <TextView
                    android:id="@+id/tvSaleNum"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/goods_compare_num_text_size"
                    android:textColor="#FF777777"
                    android:text="销量:20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:id="@+id/tvTipNum"
                android:layout_marginTop="5dp"
                android:textColor="#FF919191"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="为您找到87件商品"/>
        </RelativeLayout>

        <View
            android:background="@color/set_line_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_high" />
    </LinearLayout>

</LinearLayout>